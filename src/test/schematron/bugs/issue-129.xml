<testcase xmlns="tag:dmaus@dmaus.name,2019:Schematron:Testsuite" expect="valid" id="issue-129">
  <label>Compiler fails if a pattern has more than one variable</label>
  <documents>
    <primary filename="document.xml">
      <root xmlns=""/>
    </primary>
  </documents>
  <schemas>
    <sch:schema xmlns:sch="http://purl.oclc.org/dsdl/schematron">
      <sch:pattern>
        <sch:let name="foo" value="'bar'"/>
        <sch:let name="bar" value="'foo'"/>
        <sch:rule context="/">
          <sch:assert test="true()"/>
        </sch:rule>
      </sch:pattern>
    </sch:schema>
  </schemas>
</testcase>
